<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>hdfs_user</name>
        <value>hdfs</value>
        <property-type>USER</property-type>
        <description>Httpfs User</description>
        <value-attributes>
            <type>user</type>
            <overridable>false</overridable>
            <user-groups>
                <property>
                    <type>cluster-env</type>
                    <name>user_group</name>
                </property>
            </user-groups>
        </value-attributes>
        <on-ambari-upgrade add="true"/>
    </property>
    <property>
        <name>hdfs_group</name>
        <value>hadoop</value>
        <property-type>GROUP</property-type>
        <description>Httpfs Group</description>
    </property>
	<property>
		<name>port</name>
		<value>14000</value>
		<display-name>Port</display-name>
		<description>The HTTP port for the HTTPFS server.</description>
	</property>
	<property>
		<name>conf_dir</name>
		<value>/etc/hadoop-hdfs/conf</value>
		<display-name>Configuration directory</display-name>
		<description>Configuration directory</description>
	</property>
	<property>
		<name>hdfs_log_dir</name>
		<value>/var/log/hadoop/hdfs</value>
		<display-name>Log dir</display-name>
		<description>Logging directory</description>
	</property>
</configuration>

